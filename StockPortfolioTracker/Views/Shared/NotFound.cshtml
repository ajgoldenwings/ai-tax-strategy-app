@{
    ViewData["Title"] = "Page Not Found";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-search me-2"></i>
                        Page Not Found
                    </h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-exclamation-triangle fa-4x text-warning"></i>
                    </div>
                    
                    <h5 class="card-title">Oops! We couldn't find what you're looking for</h5>
                    <p class="card-text text-muted mb-4">
                        The page you requested might have been moved, deleted, or you may have entered an incorrect URL.
                    </p>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary me-md-2">
                            <i class="fas fa-home me-1"></i>
                            Go to Portfolio
                        </a>
                        <a href="@Url.Action("Index", "Trades")" class="btn btn-outline-primary me-md-2">
                            <i class="fas fa-chart-line me-1"></i>
                            View Trades
                        </a>
                        <button onclick="history.back()" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>
                            Go Back
                        </button>
                    </div>
                </div>
            </div>

            <div class="card mt-4 border-info">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-lightbulb me-2"></i>
                        Quick Actions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6><i class="fas fa-plus me-2 text-success"></i>Add Data</h6>
                            <div class="d-grid gap-2">
                                <a href="@Url.Action("Create", "Trades")" class="btn btn-sm btn-outline-success">
                                    <i class="fas fa-plus me-1"></i>New Trade
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h6><i class="fas fa-eye me-2 text-primary"></i>View Data</h6>
                            <div class="d-grid gap-2">
                                <a href="@Url.Action("History", "Home")" class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-history me-1"></i>Portfolio History
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>